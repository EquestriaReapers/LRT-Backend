<!-- Header.hbs -->

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <style>
        :root {
            --color-primary: #007934;
        }

        body {
            /*margin: 55px;*/
            background-color: #ffffff;
            font-family: 'Inter', 'inter', sans-serif;
        }

        .bg-primary {
            background: var(--color-primary) !important;
        }

        .color-primary {
            color: var(--color-primary) !important;
        }

        .header-cv {
            margin: 0px;
            min-height: 140px;
        }

        .header-cv-bottom {
            clip-path: polygon(0 0, 100% 0, 100% 55%, 70% 100%, 70% 100%);
            height: 25px;
            margin: 0px;
            border-bottom-right-radius: 50%;
        }

        .container-horizontal-paddings {
            padding-left: 64px;
            padding-right: 64px;
        }

        .header-content {
            padding: 32px 0px 0px 0px;
            padding-bottom: 10px;
            display: flex;
            justify-content: space-between;
            flex-direction: row;
        }

        .none-style-list {
            list-style-type: none;
        }

        .horizontal-list {
            display: flex;
            flex-wrap: wrap;
            flex-direction: row;
            padding: 0px;
        }

        .vertical-list {
            margin: 0;
        }

        .vertical-list li {
            margin-bottom: 6px;
        }

        .skills-list {
            padding-left: 20px;
            max-height: 200px;
            columns: 2;
        }

        .skills-list li {
            margin-bottom: 1px;
        }

        .horizontal-list li {
            /*display: flex;
            flex-direction: row;*/
            margin: 0px 20px 10px 0px;
        }

        .horizontal-list.skills-list li {
            margin: 0px 30px 0px 0px;

        }

        .vertical-list li .small-icon {
            margin-right: 7px;
        }

        .color-white {
            color: white;
        }

        h1 {
            font-size: 22px;
            font-weight: 700;
        }

        h2 {
            font-size: 16px;
            font-weight: 700;
        }

        .title-name {
            font-size: 26px;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .sub-title-name {
            font-size: 22px;
            font-weight: 400;
        }

        .normal-text, span.normal-text, p.normal-text {
            font-size: 16px;
            font-weight: 400;
            margin: 0px;
        }

        .small-text {
            font-size: 14px;
        }

        .small-icon {
            font-size: 14px;
        }

        @page {
            margin-top: 10px;
            background: 'red';
        }

        @page :first {
            margin-top: 0px;
            background: 'green';
        }
    </style>
</head>
